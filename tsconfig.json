{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"], "$amplify/*": ["../.amplify/generated/*"] },
    "types": ["chrome", "vite/client"],
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/vite-env.d.ts", "jest.config.cjs"]
}